<UserControl x:Class="WpfApp1.ProductDisplay"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp1"
             Width="800" Height="Auto">

    <UserControl.Resources>
        <local:RandomColorConverter x:Key="RandomColorConverter"/>
    </UserControl.Resources>

    <Border Margin="20,0,40,0" CornerRadius="10" Width="800">
        <Border.Background>
            <SolidColorBrush Color="{Binding Path=., Converter={StaticResource RandomColorConverter}}"/>
        </Border.Background>
        <StackPanel>
            <Image x:Name="ItemImage" Width="200" Height="200" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock x:Name="ItemName" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="10"/>
            <Button Content="Show Description" Click="ToggleDescription" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock x:Name="ItemDescription" TextWrapping="Wrap" Visibility="Collapsed" Margin="10"/>
        </StackPanel>
    </Border>
</UserControl>
